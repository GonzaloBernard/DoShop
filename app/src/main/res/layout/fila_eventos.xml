<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#6880B6F1"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNombreEvento"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="10"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPrioridad"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDetallesEvento"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin"
                android:text="@string/ButtonDetallesEvento"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonLista"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ButtonLista"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>